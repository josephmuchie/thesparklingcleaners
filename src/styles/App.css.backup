.App {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.main-content {
  flex: 1;
  padding-top: 120px; /* Account for larger fixed header */
}

/* Header Styles */
.header {
  background-color: var(--white);
  box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  transition: all 0.3s ease;
  border-bottom: 1px solid rgba(52, 152, 219, 0.1);
}

.header:hover {
  box-shadow: 0 6px 40px rgba(0, 0, 0, 0.15);
}

.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-md) 0;
}

.logo {
  font-size: 1.5rem;
  font-weight: var(--font-weight-bold);
  color: var(--primary-color);
  text-decoration: none;
}

.nav-links {
  display: flex;
  list-style: none;
  gap: var(--spacing-lg);
}

.nav-links a {
  font-weight: var(--font-weight-medium);
  color: var(--dark);
}

/* Mobile Navigation Styles */
@media (max-width: 768px) {
  .main-content {
    padding-top: 80px; /* Reduced for mobile */
  }
  
  .desktop-nav {
    display: none !important;
  }
  
  .mobile-menu-btn {
    display: flex !important;
  }
  
  .logo-text {
    display: flex;
    flex-direction: column;
  }
  
  .logo-tagline {
    display: none !important;
  }
  
  .logo .logo-icon {
    width: 35px !important;
    height: 35px !important;
    fontSize: '1rem' !important;
  }
}

@media (max-width: 480px) {
  .main-content {
    padding-top: 70px;
  }
  
  .navbar {
    padding: var(--spacing-sm) 0;
  }
  
  .logo {
    font-size: 1.1rem;
  }
  
  .logo .logo-icon {
    width: 32px !important;
    height: 32px !important;
  }
  
  .mobile-menu {
    width: 100% !important;
    padding: var(--spacing-lg) var(--spacing-md) !important;
    paddingTop: 80px !important;
  }
}

.nav-links {
  padding: 0.5rem 1rem;
  border-radius: 8px;
  transition: all 0.3s ease;
}

.nav-links a:hover,
.nav-links a.active {
  background-color: var(--secondary-color);
  color: var(--primary-color);
}

/* Logo Styles */
.logo {
  transition: all 0.3s ease;
}

.logo:hover {
  transform: translateY(-2px);
}

/* Modern Header Navigation */
.navbar > div:last-child {
  transition: all 0.3s ease;
}

/* Mobile Menu */
.mobile-menu-toggle {
  display: none;
  background: linear-gradient(135deg, var(--primary-color), #2980b9);
  border: none;
  padding: var(--spacing-sm);
  border-radius: 10px;
  font-size: 1.2rem;
  color: white;
  cursor: pointer;
  box-shadow: 0 2px 10px rgba(52, 152, 219, 0.3);
}

@media (max-width: 968px) {
  .main-content {
    padding-top: 140px; /* Extra padding for mobile header */
  }
  
  .navbar > div:last-child {
    display: none;
  }
  
  .mobile-menu-toggle {
    display: block;
  }
  
  .header {
    padding: var(--spacing-md) 0;
  }
  
  .logo > div:first-child {
    width: 40px !important;
    height: 40px !important;
    font-size: 1.2rem !important;
  }
  
  .logo > div:last-child > div:first-child {
    font-size: 1.2rem !important;
  }
  
  .logo > div:last-child > div:last-child {
    font-size: 0.7rem !important;
  }
}

/* Social Media Icons Styles */
.header .social-icons {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
}

.header .social-icons a {
  transition: all 0.3s ease;
}

.header .social-icons a:hover {
  transform: scale(1.1) translateY(-1px);
}

@media (max-width: 480px) {
  .main-content {
    padding-top: 100px;
  }
  
  .header {
    padding: var(--spacing-sm) 0;
  }
  
  .logo {
    gap: var(--spacing-xs) !important;
  }
  
  .logo > div:last-child > div:first-child {
    font-size: 1rem !important;
  }
}

/* Hero Section */
.hero {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  color: var(--white);
  padding: var(--spacing-xxl) 0;
  text-align: center;
  position: relative;
  overflow: hidden;
}

.hero::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="2" fill="white" opacity="0.1"/></svg>') repeat;
  animation: sparkle 20s linear infinite;
}

@keyframes sparkle {
  0% { transform: translateX(0) translateY(0); }
  100% { transform: translateX(-100px) translateY(-100px); }
}

.hero-content {
  position: relative;
  z-index: 1;
}

.hero h1 {
  color: var(--white);
  font-size: 3rem;
  margin-bottom: var(--spacing-md);
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
}

.hero-subtitle {
  font-size: 1rem;
  margin-bottom: var(--spacing-md);
  opacity: 0.95;
  font-weight: var(--font-weight-medium);
}

.hero-description {
  font-size: 1.25rem;
  margin-bottom: var(--spacing-lg);
  opacity: 0.9;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
}

/* Statistics Section */
.stat-item {
  padding: var(--spacing-md);
}

.stat-item:hover {
  transform: translateY(-2px);
  transition: var(--transition-normal);
}

/* Service Cards */
.service-card {
  transition: all var(--transition-normal);
  border: 2px solid transparent;
}

.service-card:hover {
  border-color: var(--primary-light);
  transform: translateY(-6px);
}

/* Trust Factors */
.trust-factor {
  padding: var(--spacing-lg);
  background: var(--white);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-sm);
  height: 100%;
}

.trust-factor:hover {
  box-shadow: var(--shadow-md);
  transform: translateY(-2px);
  transition: var(--transition-normal);
}

.btn-sm {
  padding: var(--spacing-xs) var(--spacing-sm);
  font-size: 0.9rem;
}

/* Section Styles */
.section {
  padding: var(--spacing-xxl) 0;
}

.section-title {
  text-align: center;
  margin-bottom: var(--spacing-xxl);
}

/* Grid Layouts */
.grid {
  display: grid;
  gap: var(--spacing-lg);
}

.grid-2 {
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
}

.grid-3 {
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
}

.grid-4 {
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
}

/* Footer */
.footer {
  background: linear-gradient(135deg, #1a252f 0%, #2c3e50 50%, #34495e 100%);
  color: var(--white);
  padding: var(--spacing-xxl) 0;
  position: relative;
  overflow: hidden;
}

.footer a {
  color: var(--primary-light);
  transition: all 0.3s ease;
}

.footer a:hover {
  color: var(--white);
  transform: translateY(-1px);
}

.footer-content {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: var(--spacing-xl);
  margin-bottom: var(--spacing-xl);
}

.footer-section h3 {
  color: var(--white);
  margin-bottom: var(--spacing-lg);
  font-size: 1.2rem;
  font-weight: var(--font-weight-bold);
}

.footer-bottom {
  text-align: center;
  padding-top: var(--spacing-lg);
  border-top: 1px solid rgba(255, 255, 255, 0.2);
  color: rgba(255, 255, 255, 0.8);
  background: rgba(0, 0, 0, 0.1);
  margin: 0 -var(--spacing-lg);
  padding: var(--spacing-lg);
  border-radius: 15px 15px 0 0;
  backdrop-filter: blur(10px);
}

/* Footer animations */
.footer-section {
  animation: fadeInUp 0.6s ease-out;
}

.footer-section:nth-child(1) { animation-delay: 0.1s; }
.footer-section:nth-child(2) { animation-delay: 0.2s; }
.footer-section:nth-child(3) { animation-delay: 0.3s; }

/* Footer responsive design */
@media (max-width: 768px) {
  .footer-content {
    grid-template-columns: 1fr;
    gap: var(--spacing-lg);
  }
  
  .footer-section {
    text-align: center;
  }
  
  .footer-bottom p {
    flex-direction: column !important;
    gap: var(--spacing-xs) !important;
  }
}

/* Animations */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-fade-in {
  animation: fadeInUp 0.6s ease-out;
}

/* Loading States */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: var(--spacing-xl);
}

.spinner {
  width: 40px;
  height: 40px;
  border: 4px solid var(--secondary-color);
  border-top: 4px solid var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Statistics Section */
.stat-item {
  padding: var(--spacing-md);
}

.stat-item:hover {
  transform: translateY(-2px);
  transition: var(--transition-normal);
}

/* Service Cards */
.service-card {
  transition: all var(--transition-normal);
  border: 2px solid transparent;
}

.service-card:hover {
  border-color: var(--primary-light);
  transform: translateY(-6px);
}

/* Trust Factors */
.trust-factor {
  padding: var(--spacing-lg);
  background: var(--white);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-sm);
  height: 100%;
}

.trust-factor:hover {
  box-shadow: var(--shadow-md);
  transform: translateY(-2px);
  transition: var(--transition-normal);
}

.btn-sm {
  padding: var(--spacing-xs) var(--spacing-sm);
  font-size: 0.9rem;
}

/* Enhanced Responsive Design */
@media (max-width: 768px) {
  .hero h1 {
    font-size: 2.2rem;
  }
  
  .hero-description {
    font-size: 1.125rem;
  }
  
  .grid-4 {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .trust-factor {
    padding: var(--spacing-md);
  }
  
  .stat-item {
    margin-bottom: var(--spacing-md);
  }
}

/* Feature Items */
.feature-item {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  padding: var(--spacing-lg);
  text-align: center;
  transition: transform 0.3s ease;
}

.feature-item:hover {
  transform: translateY(-5px);
}

.feature-icon {
  font-size: 3rem;
  margin-bottom: var(--spacing-md);
  display: block;
}

/* About Section */
.about-image img {
  transition: transform 0.3s ease;
  box-shadow: var(--shadow-md);
}

.about-image img:hover {
  transform: scale(1.02);
}

/* Enhanced Hero Buttons */
.hero .btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(0,0,0,0.3);
}

/* Backdrop Filter Support */
@supports (backdrop-filter: blur(10px)) {
  .hero .feature-item,
  .hero .hero-trust {
    backdrop-filter: blur(10px);
  }
}

/* Tablet Styles */
@media (max-width: 992px) {
  .container {
    padding: 0 var(--spacing-lg);
  }
  
  .grid-3 {
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-lg);
  }
  
  .hero h1 {
    font-size: 2.5rem;
  }
  
  .hero-subtitle {
    font-size: 1.2rem;
  }
  
  .section {
    padding: var(--spacing-3xl) 0;
  }
}

/* Mobile Styles */
@media (max-width: 768px) {
  .container {
    padding: 0 var(--spacing-md);
  }
  
  .section {
    padding: var(--spacing-2xl) 0;
  }
  
  .hero {
    padding: var(--spacing-3xl) 0 var(--spacing-2xl);
    text-align: center;
  }
  
  .hero h1 {
    font-size: 2.2rem;
    line-height: 1.2;
    margin-bottom: var(--spacing-lg);
  }
  
  .hero-subtitle {
    font-size: 1.1rem;
    line-height: 1.5;
    margin-bottom: var(--spacing-xl);
  }
  
  .hero-buttons {
    flex-direction: column;
    gap: var(--spacing-md);
    align-items: center;
  }
  
  .hero-buttons .btn {
    width: 100%;
    max-width: 280px;
    justify-content: center;
  }
  
  .hero-trust {
    flex-direction: column !important;
    gap: var(--spacing-md) !important;
    text-align: center;
  }
  
  .grid-3,
  .grid-4 {
    grid-template-columns: 1fr;
    gap: var(--spacing-xl);
  }
  
  .feature-item {
    padding: var(--spacing-xl);
  }
  
  .feature-icon {
    font-size: 2.5rem;
  }
  
  .service-card {
    margin-bottom: var(--spacing-lg);
  }
  
  .service-card img {
    height: 200px;
  }
  
  .about-content {
    flex-direction: column;
    gap: var(--spacing-xl);
  }
  
  .about-text,
  .about-image {
    width: 100%;
  }
  
  .contact-cards {
    flex-direction: column;
    gap: var(--spacing-lg);
  }
  
  .contact-card {
    max-width: 100%;
  }
  
  h2 {
    font-size: 2rem;
    text-align: center;
  }
  
  h3 {
    font-size: 1.3rem;
  }
  
  .stats-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-md);
  }
  
  .stat-item {
    margin-bottom: var(--spacing-md);
  }
}

/* Small Mobile Styles */
@media (max-width: 480px) {
  .container {
    padding: 0 var(--spacing-sm);
  }
  
  .section {
    padding: var(--spacing-xl) 0;
  }
  
  .hero {
    padding: var(--spacing-2xl) 0 var(--spacing-xl);
  }
  
  .hero h1 {
    font-size: 1.8rem;
    margin-bottom: var(--spacing-md);
  }
  
  .hero-subtitle {
    font-size: 1rem;
    margin-bottom: var(--spacing-lg);
  }
  
  .hero-buttons .btn {
    padding: var(--spacing-sm) var(--spacing-md);
    font-size: 0.9rem;
  }
  
  .feature-item {
    padding: var(--spacing-lg);
  }
  
  .feature-icon {
    font-size: 2rem;
  }
  
  .service-card {
    padding: var(--spacing-lg);
  }
  
  .service-card img {
    height: 180px;
  }
  
  .contact-form input,
  .contact-form textarea {
    padding: var(--spacing-sm);
    font-size: 1rem;
  }
  
  .btn {
    padding: var(--spacing-sm) var(--spacing-md);
    font-size: 0.9rem;
  }
  
  h2 {
    font-size: 1.6rem;
  }
  
  h3 {
    font-size: 1.2rem;
  }
  
  .stats-grid {
    grid-template-columns: 1fr;
    gap: var(--spacing-sm);
  }
  
  .stat-number {
    font-size: 2rem;
  }
  
  .footer {
    padding: var(--spacing-xl) 0;
  }
  
  .footer-content {
    grid-template-columns: 1fr;
    gap: var(--spacing-lg);
    text-align: center;
  }
  
  .footer-section h4 {
    font-size: 1.1rem;
  }
}

/* Touch-friendly interactions */
@media (hover: none) and (pointer: coarse) {
  .btn:hover,
  .service-card:hover,
  .feature-item:hover {
    transform: none;
  }
  
  .btn:active {
    transform: scale(0.98);
  }
}